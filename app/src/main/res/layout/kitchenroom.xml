<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kitchenbg"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    >

    <TextView
        android:layout_marginRight="50dp"
        android:id="@+id/kitchenroomheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Kitchen Room"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/fridge"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_below="@id/kitchenroomheader"
        android:layout_marginTop="30dp"
        android:background="@drawable/duongvien_goctron"
        android:backgroundTint="#85C1E9">


        <Switch
            android:id="@+id/switchfridge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:text="Fridge      "
            android:textSize="25dp"
            android:textStyle="bold"

            />

        <ImageView
            android:id="@+id/imagefridge"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/switchfridge"
            android:layout_marginLeft="110dp"

            android:layout_marginTop="-5dp"
            android:src="@drawable/fridge" />

        <TextView
            android:id="@+id/tv_seekbarfridge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagefridge"
            android:gravity="center"
            android:text="0"
            android:textSize="30dp" />

        <SeekBar

            android:id="@+id/seekBarfridge"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagefridge"
            android:layout_marginTop="40dp"
            android:max="20"
            android:min="0"
            android:progress="10" />

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="151dp"
        android:layout_height="176dp"
        android:layout_below="@id/fridge"
        android:layout_marginTop="24dp"
        android:background="@drawable/duongvien_goctron"
        android:backgroundTint="#85C1E9">

        <ImageView
            android:id="@+id/lighticon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/countertop"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/lighticon"
            android:layout_marginTop="20dp"
            android:text="Light"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/swLight"
            android:layout_width="69dp"
            android:layout_height="46dp"
            android:layout_below="@id/lighticon"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="11dp"
            android:backgroundTint="#2874A6 "

            />

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="176dp"
        android:layout_below="@id/fridge"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/duongvien_goctron"
        android:backgroundTint="#85C1E9">

        <ImageView
            android:id="@+id/exhausticon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/exhaust"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_below="@id/exhausticon"
            android:layout_marginTop="20dp"
            android:text="Exhaust"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/swExhaust"
            android:layout_width="51dp"
            android:layout_height="45dp"
            android:layout_below="@id/exhausticon"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="11dp"
            android:backgroundTint="#2874A6 "

            />
    </RelativeLayout>



</RelativeLayout>
